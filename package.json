{
  "name": "joltite.js",
  "version": "1.0.1",
  "description": "A JavaScript library for interfacing with the Game Jolt game API.",
  "author": "Thomas Bowen",
  "repository": {
    "type": "git",
    "url": "https://github.com/ttbowen/joltite.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --module commonjs --declaration true --outDir dist",
    "prepublish": "yarn run build && yarn run rollup",
    "watch:web": "multiscript tsc --watch + rollup -c --watch --silent",
    "watch:node": "tsc --watch --module commonjs",
    "rollup": "rollup -c && node uglify",
    "test": "jest --coverage",
    "typedoc": "typedoc src/index.ts"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "jest": {
    "preset": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint"
    ],
    "*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.13.0",
    "@types/node-fetch": "^2.5.6",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "lint-staged": "^10.0.8",
    "multiscript": "^0.1.8",
    "prettier": "2.0.4",
    "rollup": "^2.6.1",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "typedoc": "^0.19.2",
    "typescript": "^3.8.3",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "node-fetch": "^3.1.1"
  }
}
